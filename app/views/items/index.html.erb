<h1>All Items</h1>

<% @items.each do |item| %>
  <h2><a href="/items/<%=item.id %>"><%= item.name %></a></h2>
  <p>description:<%= item.description %></p>
  <p>price:<%= item.price %></p>
  <p>image: <img src=<%=item.image %>></p>
  <p>inventory:<%= item.inventory %></p>
  <p>active:<%= item.active %></p>
  <p>merchant name:<%= Merchant.find(item.merchant_id).name %>
<% end %>

<a href="/merchants/new">Create New Item</a>
